<%= render :partial => 'shared/map_head' %>
<script type="text/javascript">
//<![CDATA[
function onLoad(lt,ln,zm) {
  if (GBrowserIsCompatible()) {
    lt = <%= @region.zoom != 0 ? @region.latitude : @region.nation.zoom != 0 ? @region.nation.latitude : -40.913512 %>;
    ln = <%= @region.zoom != 0 ? @region.longitude : @region.nation.zoom != 0 ? @region.nation.longitude : 172.705078 %>;
    zm = <%= @region.zoom != 0 ? @region.zoom : @region.nation.zoom != 0 ? @region.nation.zoom : 5 %>;
    var map = new GMap2(document.getElementById("map"));
    var icon = new GIcon();
    icon.image = "http://<%= URL_BASE %>/images/mm_20_orange.png";
    icon.shadow = "http://<%= URL_BASE %>/images/mm_20_shadow.png";
    icon.iconSize = new GSize(12, 20);
    icon.shadowSize = new GSize(22, 20);
    icon.iconAnchor = new GPoint(6, 20);
    icon.infoWindowAnchor = new GPoint(5, 1);
    var uiOptions = map.getDefaultUI();
    uiOptions.zoom.scrollwheel = false; // Disable scroll wheel zoom
    map.setUI(uiOptions);
    GEvent.addListener(map, "moveend", function() {
      var center = map.getCenter();
      document.getElementById("region_latitude").value = center.lat();
      document.getElementById("region_longitude").value = center.lng();
      document.getElementById("region_zoom").value = map.getZoom();
    });
    map.setCenter(new GLatLng(lt, ln), zm);
    map.addMapType(G_SATELLITE_3D_MAP);
    <% Area.get_markers(@region.id).each do |area| %>
    map.addOverlay(new GMarker(new GLatLng(<%=area[0].to_s%>,<%=area[1].to_s%>),{title:"<%=area[2]%>",icon:icon}))
    <% end %>
    map.setMapType(<%= user_map_style %>);
    } else { document.getElementById("map").innerHTML="This website uses Google Maps, which appear not to work with your browser. See the FAQ."; }
}
//]]>
</script>
