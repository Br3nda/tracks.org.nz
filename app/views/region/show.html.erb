<h1><%= @region.name %></h1>
<% if :notice %><p class="notice"><%= flash[:notice] %></p><% end %>

<p><%= replace_for_view(h(@region.description)) %></p>

<% if @region.zoom != 0 %>
<h2>Areas</h2><h3>&nbsp;</h3>
<div id="map"></div>
<% end %>

<%= render :partial => 'track_report/summary', :locals => {:title => 'Recent Track Reports'} %>

<h2>Track type/distance summary</h2><h3>&nbsp;</h3>
<% total_len = 0 %>
<p><% Track.length_summary(Area.find(:all, :conditions => ["region_id = ?", @region.id]).collect(&:id)).collect do |id, length| %>
<%= Condition.find(:first, :select => 'name', :conditions => ["id = ?", id]).name %>: <%= distance(length) %><br/>
<% total_len += length %>
<% end %></p>
<p>Total distance: <%= distance(total_len) %></p>
<p>Total number tracks for <%= @region.name %>: <%= x = 0; @region.areas.each {|area| x += area.tracks.size }; x %></p>

<h2>Stay connected</h2><h3></h3>
<p>
  <a href="/region/rss/<%= @region.id %>" title="Subscribe to track reports for <%= @region.name %>" rel="alternate" type="application/rss+xml"><img align="absbottom" src="/images/feed.png" alt=""/> RSS feed of <%= @region.name %> reports</a>
</p>

<hr size="1" color="#ccc">

<p id="edit"><%= link_to 'Edit', :action => 'edit', :id => @region %>
<% if creator? %>
 | <%= link_to 'Add area', :controller => 'area', :action => 'new', :region_id => @region.id %>
<% end %>
<% if ! logged_in? %> (requires login)<% end %></p>
