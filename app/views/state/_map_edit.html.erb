<%= render :partial => 'shared/map_head' %>
<script type="text/javascript">
//<![CDATA[
function load(lt,ln,zm) {
  if (GBrowserIsCompatible()) {
    if (!zm) {lt = -41.284514; ln = 174.774627; zm = 11;}
    var map = new GMap2(document.getElementById("map"));
    var icon = new GIcon();
    icon.image = "http://www.tracks.org.nz/images/mm_20_orange.png";
    icon.shadow = "http://www.tracks.org.nz/images/mm_20_shadow.png";
    icon.iconSize = new GSize(12, 20);
    icon.shadowSize = new GSize(22, 20);
    icon.iconAnchor = new GPoint(6, 20);
    icon.infoWindowAnchor = new GPoint(5, 1);
    GEvent.addListener(map, "moveend", function() {
      var center = map.getCenter();
      document.getElementById("state_latitude").value = center.lat();
      document.getElementById("state_longitude").value = center.lng();
      document.getElementById("state_zoom").value = map.getZoom();
    });
    map.addControl(new GSmallMapControl());
    map.addControl(new GHierarchicalMapTypeControl());
    map.addControl(new GScaleControl());
    map.addMapType(G_PHYSICAL_MAP);
    map.setCenter(new GLatLng(lt, ln), zm, G_SATELLITE_MAP);
    <% get_area_markers(@state.id).each do |area| %>
    map.addOverlay(new GMarker(new GLatLng(<%=area[0].to_s%>,<%=area[1].to_s%>),{title:"<%=area[2]%>",icon:icon}))
    <% end %>
    } else { document.getElementById("map").innerHTML="This website uses Google Maps, which appear not to work with your browser. See the FAQ."; }
}
//]]>
</script>
