<% current_title = params[:action] == 'edit' ? ' (edit)' : '' %>
<% nation = Nation.find(:first) %>
<% state = State.find(:first, :conditions => ["nation_id = ?", nation.id]) %>
<li><%= link_to state.name, { :controller => 'state', :action => 'show', :id => state.id }, :id => 'state' %></li>
<% areas = Area.find(:all, :conditions => ["state_id = ?", state.id]) %>
<% for area in areas %>
<li><%= link_to area.name, { :controller => 'area', :action => 'show', :id => area.id }, :id => 'area' %></li>
<% end %>