<h1>Admin</h1>
<% if :notice %><p class="notice"><%= flash[:notice] %></p><% end %>

<table>

  <tr>
    <th>Name</th>
    <th>Edits</th>
    <th>Reports</th>
    <th>Last edit</th>
  </tr>

  <% @users.each do |user| %>
  <tr>
    <td><%= h user.login %></td>
    <td><%= user.edits %></td>
    <td><%= user.reports %></td>
    <td><%= user.last_track_edit_at.to_s(:full) if !user.last_track_edit_at.nil? %></td>
  </tr>
  <% end %>

</table>
