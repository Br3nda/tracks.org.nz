<h1><%= @track.name %> (edit)</h1>
<% if :notice %><p class="notice"><%= flash[:notice] %></p><% end %>
<% form_tag :action => 'update', :id => @track do %>
  <%= render :partial => 'form' %>
  <p><%= submit_tag 'Save changes' %></p>
<% end %>

<hr size="1" color="#ccc">

<p><%= link_to 'Back', :action => 'show', :id => @track %></p>